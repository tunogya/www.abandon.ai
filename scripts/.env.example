# abandon.ai Game Scripts - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# API Configuration
# ============================================

# API base URL
# Production: https://api.abandon.ai/api
# Development: http://127.0.0.1:8787/api
API_BASE_URL=https://api.abandon.ai/api



# ============================================
# Wallet Configuration
# ============================================

# Your Ethereum wallet address (generated from generate-keypair.ts)
# Example: 0x742d35Cc6634C0532925a3b844Bc9e7595f0bEb
WALLET_ADDRESS=

# ============================================
# Game Settings
# ============================================

# Default difficulty level for virus creation (3-10)
# Higher = more computational work required
# Recommended: 4-5 for testing, 6+ for production
DEFAULT_DIFFICULTY=4

# Default memo for virus creation (optional, hex-encoded)
# Example: 48656c6c6f (hex for "Hello")
DEFAULT_MEMO=

# ============================================
# Mining Configuration
# ============================================

# Progress update interval (number of attempts)
# Shows mining progress every N attempts
PROGRESS_INTERVAL=100000

# Maximum mining time in milliseconds (0 = unlimited)
# Stops mining if this time is exceeded
MAX_MINING_TIME=0

# ============================================
# Development Settings
# ============================================

# Enable verbose logging
DEBUG=false


